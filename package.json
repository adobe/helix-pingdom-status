{
  "name": "@adobe/helix-status",
  "version": "9.2.1",
  "description": "Report status for OpenWhisk Microservices for Uptime checks with Pingdom or New Relic",
  "main": "src/index.js",
  "scripts": {
    "test": "nyc mocha",
    "test-ci": "nyc mocha --reporter xunit --reporter-options output=./junit/test-results.xml && codecov",
    "lint": "./node_modules/.bin/eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz"
  },
  "wsk": {
    "namespace": "helix",
    "name": "helix-services/status@${version}"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-status.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-status/issues"
  },
  "homepage": "https://github.com/adobe/helix-status#readme",
  "dependencies": {
    "@adobe/helix-fetch": "2.4.1"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.5",
    "@pollyjs/adapter-node-http": "5.1.1",
    "@pollyjs/core": "5.1.1",
    "@pollyjs/persister-fs": "5.1.1",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "chai": "4.3.4",
    "chai-http": "4.3.0",
    "codecov": "3.8.3",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.24.0",
    "express": "4.17.1",
    "jsdoc-to-markdown": "7.0.1",
    "junit-report-builder": "3.0.0",
    "lint-staged": "11.1.2",
    "mocha": "9.0.3",
    "nyc": "15.1.0",
    "semantic-release": "17.4.4"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
