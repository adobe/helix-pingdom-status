{
  "name": "@adobe/helix-status",
  "version": "10.1.0",
  "description": "Report status for OpenWhisk Microservices for Uptime checks with Pingdom or New Relic",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "c8 mocha",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "semantic-release-dry": "semantic-release --dry-run --branches $CI_BRANCH",
    "prepare": "husky install"
  },
  "mocha": {
    "require": [
      "test/setup-env.js"
    ],
    "reporter": "mocha-multi-reporters",
    "reporter-options": "configFile=.mocha-multi.json",
    "loader": "esmock"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-status.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-status/issues"
  },
  "homepage": "https://github.com/adobe/helix-status#readme",
  "dependencies": {
    "@adobe/fetch": "4.1.4"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "2.0.6",
    "@pollyjs/adapter-node-http": "6.0.6",
    "@pollyjs/core": "6.0.6",
    "@pollyjs/persister-fs": "6.0.6",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "c8": "9.1.0",
    "chai": "5.1.1",
    "chai-http": "4.4.0",
    "eslint": "8.57.0",
    "esmock": "2.6.5",
    "express": "4.19.2",
    "husky": "9.0.11",
    "junit-report-builder": "3.2.1",
    "lint-staged": "15.2.5",
    "mocha": "10.4.0",
    "mocha-multi-reporters": "1.5.1",
    "semantic-release": "24.0.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  }
}
